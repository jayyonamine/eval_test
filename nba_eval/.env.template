# NBA Game Data Collection - Configuration Template
# Copy this to .env and fill in your values

# ==============================================================================
# AWS BEDROCK CONFIGURATION
# ==============================================================================
# AWS Region where Bedrock is available (e.g., us-east-1, us-west-2)
AWS_REGION=us-east-1

# AWS Credentials (optional if using IAM roles or AWS CLI configured credentials)
# Get these from AWS IAM Console
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Bedrock Model ID (optional, defaults to Claude Sonnet 4)
# BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-20250514-v1:0

# ==============================================================================
# GOOGLE CLOUD CONFIGURATION
# ==============================================================================
# Your GCP Project ID
GCP_PROJECT_ID=your-gcp-project-id

# Path to your service account JSON key file
# Example: /home/user/keys/nba-collector-key.json
GCP_CREDENTIALS_PATH=/path/to/service-account-key.json

# ==============================================================================
# BIGQUERY CONFIGURATION
# ==============================================================================
# Dataset name (will be created if it doesn't exist)
DATASET_ID=nba_data

# Table name (will be created if it doesn't exist)
TABLE_ID=game_results

# ==============================================================================
# COLLECTION CONFIGURATION (Optional)
# ==============================================================================
# Timezone for scheduling (e.g., America/New_York, America/Los_Angeles)
TIMEZONE=America/New_York

# Time to run collection (24-hour format)
COLLECTION_HOUR=8
COLLECTION_MINUTE=0

# ==============================================================================
# ADVANCED OPTIONS (Optional)
# ==============================================================================
# Skip duplicate detection (not recommended)
SKIP_DUPLICATE_CHECK=false

# Enable verbose logging
VERBOSE_LOGGING=true

# Retry failed collections
MAX_RETRIES=3
